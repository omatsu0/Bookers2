<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <meta name="csrf-param" content="authenticity_token" />
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <span>Bookers</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <!--↓users/showページに修正 -->
          <!-- <li><a class="glyphicon glyphicon-home home" href="/"> Home</a></li> -->
          <li><%= link_to " Home", user_path(current_user), class: 'glyphicon glyphicon-home home' %></li>
          <!--↓users/indexページに修正 -->
          <!-- <li><a class="glyphicon glyphicon-user users" href="/users"> Users</a></li> -->
          <li><%= link_to " Users", users_path, class: 'glyphicon glyphicon-user users' %></li>
          <li><%= link_to " Books", books_path, class: 'glyphicon glyphicon-book books' %></li>
          <li><%= link_to " logout", destroy_user_session_path, class: 'glyphicon glyphicon-log-out logout', method: :delete %></li>
          <!-- <li><a class="glyphicon glyphicon-log-out logout" rel="nofollow" data-method="delete" href="/users/sign_out"> logout</a></li> -->
        <% else %>
          <li><%= link_to " Home", root_path, class: 'glyphicon glyphicon-home home' %></li>
          <li><%= link_to " About", home_about_path, class: 'glyphicon glyphicon-link about' %></li>
          <!-- <li><a class="glyphicon glyphicon-link about" href="/home/about"> About</a></li> -->
          <li><%= link_to " sign up", new_user_registration_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
          <!-- <li><a class="glyphicon glyphicon-edit sign_up" href="/users/sign_up"> sign up</a></li> -->
          <li><%= link_to " login", new_user_session_path, class: 'glyphicon glyphicon-log-in sign_in' %></li>
          <!-- <li><a class="glyphicon glyphicon-log-in sign_in" href="/users/sign_in"> login</a></li> -->
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<div class="body">
  <div class="container">
    <div id="notice"><%= notice %></div>
    
    <%= yield %>

 </div>
</div>

  <footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

  </body>
</html>
