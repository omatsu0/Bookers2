<div class='row'>
  
  <div class='col-xs-3'>
    <h2>User info</h2>
    <table class='table'>
      <tr><%= attachment_image_tag current_user, :profile_image,:fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size: "100x100" %></tr> 
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
</table>

<div class='row'>
    <%= link_to "", edit_user_path(current_user.id), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user' %>
</div>

   <h2>New book</h2>

<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
          <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
        </div>
    <% end %>
  <div class="field row">
    <div>Title</div>
    <%= f.text_field :title,class: "col-xs-12"  %>
  </div>

  <div class="field row">
    <div>Opinion</div>
    <%= f.text_area :body, class: "col-xs-12 book_body" %>
  </div>

  <div class="actions row">
  <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12", data: { disable_with:"Create Book" } %>
  </div>
<% end %>
</div>
<!-- ここまでサイドバー -->
  <div class='col-xs-9'>
    <h2>Book detail</h2>
    <table class='table'>
      <tr>
        <td><%= link_to user_path(@book.user.id) do %>
          <%= attachment_image_tag @book.user, :profile_image,:fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %><br><%= @book.user.name %>
          <% end %></td>
        <% if @book.user == current_user %>
        </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: 'btn-sm btn-success edit_book_25589' %></td>
            <td><%= link_to "Destroy", book_path, class: 'btn-sm btn-danger destroy_book_25591' , method: :delete, data: {confirm: "本当に消しますか?"} %></td>
        <% else %>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
        <% end %>
        

      </tr>
    </table>

  </div>
</div>